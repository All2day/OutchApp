<?xml version='1.0' encoding='utf-8'?>
<widget android-packageName="dk.appvice.outch" id="dk.appvice.outch" ios-CFBundleIdentifier="dk.appvice.outch" version="0.0.48" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>GeoGames</name>
    <description>
        Lets go outside
    </description>
    <author email="mads@appvice.dk" href="http://appvice.dk">
        Mads Kessel
    </author>
    <content src="index.html" />
    <preference name="target-device" value="handset" />
    <preference name="webviewbounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="res/icon.png" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <gap:config-file mode="add" parent="ITSAppUsesNonExemptEncryption" platform="ios" target="*-Info.plist">
            <false />
        </gap:config-file>
    </platform>
    <platform name="android">
    </platform>
    <platform name="ios">
      <!-- iPhone 6 / 6+ -->
      <icon src="res/icon/ios/Icon-App-60x60@3x.png" gap:platform="ios" width="180" height="180" />

      <!-- iPhone / iPod Touch  -->
      <icon src="res/icon/ios/Icon-App-60x60@1x.png" gap:platform="ios" width="60" height="60" />
      <icon src="res/icon/ios/Icon-App-60x60@2x.png" gap:platform="ios" width="120" height="120" />

      <!-- iPad -->
      <icon src="res/icon/ios/Icon-App-76x76@1x.png" gap:platform="ios" width="76" height="76" />
      <icon src="res/icon/ios/Icon-App-76x76@2x.png" gap:platform="ios" width="152" height="152" />

      <!-- Settings Icon -->
      <icon src="res/icon/ios/Icon-App-29x29@1x.png" gap:platform="ios" width="29" height="29" />
      <icon src="res/icon/ios/Icon-App-29x29@2x.png" gap:platform="ios" width="58" height="58" />

      <!-- Spotlight Icon -->
      <icon src="res/icon/ios/Icon-App-40x40@1x.png" gap:platform="ios" width="40" height="40" />
      <icon src="res/icon/ios/Icon-App-40x40@2x.png" gap:platform="ios" width="80" height="80" />

      <!-- iPhone / iPod Touch -->
      <icon src="res/icon/ios/Icon-App-57x57@1x.png" gap:platform="ios" width="57" height="57" />
      <icon src="res/icon/ios/Icon-App-57x57@2x.png" gap:platform="ios" width="114" height="114" />

      <!-- iPad -->
      <icon src="res/icon/ios/Icon-App-72x72@1x.png" gap:platform="ios" width="72" height="72" />
      <icon src="res/icon/ios/Icon-App-72x72@2x.png" gap:platform="ios" width="144" height="144" />

      <!-- iPad Spotlight and Settings Icon -->
      <icon src="res/icon/ios/Icon-App-50x50@1x.png" gap:platform="ios" width="50" height="50" />
      <icon src="res/icon/ios/Icon-App-50x50@2x.png" gap:platform="ios" width="100" height="100" />
    </platform>
    <engine name="android" spec="^6.2.3" />
    <plugin name="com.manueldeveloper.volume-buttons" spec="https://github.com/manueldeveloper/cordova-plugin-volume-buttons.git" />
    <plugin name="cordova-plugin-device" spec="~1.1.6" />
    <plugin name="cordova-plugin-device-motion" spec="~1.2.5" />
    <plugin name="cordova-plugin-device-orientation" spec="~1.0.7" />
    <plugin name="cordova-plugin-geolocation" spec="https://github.com/Kezzel/cordova-plugin-geolocation.git" />
    <plugin name="cordova-plugin-is-debug" spec="^1.0.0" />
    <plugin name="cordova-plugin-vibration" spec="~2.1.5" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
</widget>
